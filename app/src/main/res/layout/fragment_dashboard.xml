<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context="com.kmpegel.medi.ui.dashboard.DashboardFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2dp"
                android:onClick="buttonClick"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:drawableLeft="@drawable/subtopic"
                android:textSize="18dp"
                android:backgroundTint="#2271b3"
                app:cornerRadius="25dp"
                android:text="Abordaje clínico" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2dp"
                android:onClick="buttonClick"
                android:backgroundTint="#2271b3"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/subtopic"
                android:textStyle="bold"
                android:textSize="18dp"
                app:cornerRadius="25dp"
                android:text="Promoción de la salud" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:drawableLeft="@drawable/subtopic"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginBottom="2dp"
                android:onClick="buttonClick"
                android:backgroundTint="#2271b3"
                app:cornerRadius="25dp"
                android:text=" Fundamento
de las decisiones médicas" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:drawableLeft="@drawable/subtopic"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"
                android:onClick="buttonClick"
                android:backgroundTint="#2271b3"
                app:cornerRadius="25dp"
                android:visibility="gone"
                android:text="Gestión de Proyectos
de Software" />
            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:drawableLeft="@drawable/subtopic"
                android:layout_marginBottom="2dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"
                android:visibility="gone"
                android:onClick="buttonClick"
                android:backgroundTint="#2271b3"
                android:text="Comprensión lectora" />
            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:drawableLeft="@drawable/subtopic"
                android:textSize="18dp"
                android:visibility="gone"
                android:onClick="buttonClick"
                android:backgroundTint="#2271b3"
                android:text="Redacción indirecta" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2dp"
                android:backgroundTint="#2271b3"
                android:drawableLeft="@drawable/start3"
                android:onClick="buttonClick"
                android:text="Examen Completo"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:cornerRadius="25dp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2dp"
                android:backgroundTint="#2271b3"
                android:drawableLeft="@drawable/tarjeta"
                android:onClick="buttonClick"
                android:text="Tarjetas"
                android:visibility="invisible"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:cornerRadius="25dp"
                android:textStyle="bold" />



        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>