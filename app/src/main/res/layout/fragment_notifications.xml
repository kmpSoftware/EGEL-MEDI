    <Button
        android:id="@+id/selectTimeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/notification"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#2271b3"
        android:textStyle="bold"
        android:textSize="20dp"
        android:scaleType="centerCrop"
        app:cornerRadius="25dp"
        android:src="@mipmap/noti5_foreground"
        android:text="Activar notificaciones"
        />



    <Button
        android:id="@+id/disableNotificationsButton"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#2271b3"
        android:textStyle="bold"
        android:textSize="20dp"
        app:cornerRadius="25dp"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/silent"
        android:scaleType="centerCrop"
        android:src="@mipmap/noti4_foreground"
        android:text="Desactivar notificaciones"
        />



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="220dp"
android:layout_marginTop="30dp"
